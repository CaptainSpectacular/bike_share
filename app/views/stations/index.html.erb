<html>
<img src="https://images.duckduckgo.com/iu/?u=https%3A%2F%2Fupload.wikimedia.org%2Fwikipedia%2Fcommons%2Ff%2Ffb%2FCitybike_station_bikeMi_Milan_Italy_20101230.JPG&f=1" class="img-responsive" style="width:100%">
<div class="centered-text">
  <h1 class="stations">Stations</h1>
  <% if current_admin %>
      <%= link_to "Create a New Station", new_admin_station_path %><br>
      <%= link_to "Create a New Condition", new_admin_condition_path %><br>
      <%= link_to "Create a New Trip", new_admin_trip_path %><br>
  <% end %>
  <%= link_to "<< Back to Learning Dashboard", learn_dashboard_path %><br>
</div>
  <table class="trip-display">
    <tr>
      <th>Station Name</th>
      <th>Dock Count</th>
      <th>City</th>
      <th>Installation Date</th>
    </tr>
    <% @stations.each do |station| %>
    <div class="station-<%= station.id %>">
      <tr>
        <td><%= link_to station.name, station_path(station) %></td>
        <td><%= station.dock_count %></td>
        <td><%= station.city %></td>
        <td><%= station.installation_date %></td>
      <% if current_admin %>
        <td><%= link_to "Edit", edit_admin_station_path(station) %></td>
        <td><%= link_to "Delete", admin_station_path(station), method: "delete", data: {confirm: "Are you sure you want to delete this idea?"} %></td>
      <% end %>
    </tr>
    </div>
  <% end %>
</table>
</html>
