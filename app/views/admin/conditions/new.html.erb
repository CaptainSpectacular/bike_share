<h1>Create a Condition</h1>

<%= form_for [:admin, @condition] do |f| %>
  <%= f.label :date %>
  <%= f.text_field :date %>

  <%= f.label :max_temp %>
  <%= f.number_field :max_temp %>

  <%= f.label :average_temp %>
  <%= f.number_field :average_temp %>

  <%= f.label :min_temp %>
  <%= f.number_field :min_temp %>

  <%= f.label :average_humidity %>
  <%= f.number_field :average_humidity %>

  <%= f.label :average_visibility %>
  <%= f.number_field :average_visibility %>

  <%= f.label :average_windspeed %>
  <%= f.number_field :average_windspeed %>

  <%= f.label :precipitation %>
  <%= f.number_field :precipitation %>
  

  <%= f.submit 'Create Condition' %>

<% end %>
