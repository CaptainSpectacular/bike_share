<% @accessories.each do |accessory| %>
  <%= accessory.title %>
  <%= accessory.price %>
  <%= accessory.image %>
  Quantity: <%= @cart.accessory_count(accessory.id.to_s) %>
  Subtotal: <%= @cart.accessory_count(accessory.id.to_s) * accessory.price %>
  <%= button_to "Add 1", cart_path(accessory_id: accessory.id, value: "add") %>
  <%= button_to "Subtract 1", cart_path(accessory_id: accessory.id, value: "subtract") %>
  <%= button_to "Remove Accessory from Cart", cart_path(accessory_id: accessory.id), method: "delete", data: {confirm: "Are you sure you want to remove this from the cart?"}%>
<% end %>
Cart Total: <%= @cart.total %>
