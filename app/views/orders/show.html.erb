<html class="home">
  <h1 class="centered-text">Order: <%= @order.id %></h1>
    <div class="hero-text accessory-box">
    <% if @order.status == "ordered" %>
    <% elsif @order.status == "paid" %>
    <% elsif @order.status == "canceled" %>
    <% else %>
    <% end %>
    Total: <%= @order.total %><br>
    Status: <%= @order.status %><br>
    Date: <%= @order.date_time %><br>

    Accessories Ordered:<br>
    <% @order.accessories.each do |accessory| %>
      Title: <%= link_to accessory.title, accessory_path(accessory) %>
      Quantity: <%= accessory.order_quantity(@order) %>
      Subtotal: <%= accessory.order_subtotal(@order) %><br>
    <% end %>
    </div>
</html>
