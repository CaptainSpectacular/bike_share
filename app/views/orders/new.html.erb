<%= form_for @order do |f| %>
  <%= f.label "Full Name" %>
  <%= f.text_field :purchaser_name %>

  <%= f.label "Address" %>
  <%= f.text_field :address %>

  <%= f.hidden_field :user_id, :value => "#{current_user.id}" %>
  <%= f.hidden_field :status, :value => "Ordered" %>

  <%= f.submit %>
<% end %>
