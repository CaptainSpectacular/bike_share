
<%= @conditions.each do |condition| %>
  <h3>
    Date: <%= link_to condition.date, condition_path(condition) %>
  </h3>

  <p>
    Max Temp: <%= condition.max_temp %>
  </p>
  <p>
    Mean Temp: <%= condition.average_temp %>
  </p>
  <p>
    Min Temp: <%= condition.min_temp %>
  </p>
  <p>
    Mean Humidity: <%= condition.average_humidity %>
  </p>
  <p>
    Mean Visibility: <%= condition.average_visibility %> miles
  </p>
  <p>
    Mean Windspeed: <%= condition.average_windspeed %> mph
  </p>
  <p>
    Precipitation: <%= condition.precipitation %> inches
  </p>

<% end %>